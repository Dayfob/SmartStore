<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/lexend"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="@dimen/BottomNavigationViewHeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainBG"
        android:fontFamily="@font/lexend"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_for_img_rounded_white"
            android:contentDescription="@string/product_image"
            android:scaleType="center"
            android:src="@drawable/ic_empty_image" />

        <ImageView
            android:id="@+id/productImageLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/White"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/productName"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defaultMargin"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/defaultMargin"
                android:text="Product Name Product NameProduct Name Product NameProduct NameProduct Name"
                android:textColor="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/productHeart"
                android:layout_width="@dimen/ProductWishIconSize"
                android:layout_height="@dimen/ProductWishIconSize"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:contentDescription="@string/like_product"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:scaleType="center"
                android:src="@drawable/ic_nav_like"
                android:tint="@color/colorSecondary" />

            <TextView
                android:id="@+id/productNumberTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productName"
                android:layout_marginLeft="@dimen/defaultMargin"
                android:layout_marginRight="@dimen/defaultMargin"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Product Number:"
                android:textColor="#969696"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/productNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productName"
                android:layout_toEndOf="@+id/productNumberTitle"
                android:maxLines="1"
                android:singleLine="true"
                android:text="12210"
                android:textColor="#969696"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/productNameLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:id="@+id/productPriceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/defaultMargin"
            android:paddingRight="@dimen/defaultMargin"
            android:gravity="center_vertical"
            android:background="@color/White"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/lexend"
                android:maxLines="1"
                android:singleLine="true"
                android:text="10000 tng."
                android:textColor="@color/Black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonCartMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/TVCartAmount"
                android:background="@drawable/bg_for_buy_btn_rounded_gray"
                android:text="-" />

            <TextView
                android:id="@+id/TVCartAmount"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/buttonCartPlus"
                android:fontFamily="@font/lexend"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="1"
                android:textColor="#969696"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonCartPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/buttonCartAdd"
                android:background="@drawable/bg_for_buy_btn_rounded"
                android:text="+" />

            <Button
                android:id="@+id/buttonCartAdd"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_for_buy_btn_rounded"
                android:fontFamily="@font/lexend"
                android:text="Add to Cart" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/productPriceLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="#959595" />


        <ImageView
            android:id="@+id/productPriceLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#959595" />

        <TextView
            android:id="@+id/TVproductAttributesTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/White"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Attributes:"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productAttributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:paddingHorizontal="5dp"
            tools:itemCount="6"
            tools:listitem="@layout/grid_item_product_attribute" />

        <ImageView
            android:id="@+id/productDescriptionLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="#959595" />

        <ImageView
            android:id="@+id/productDescriptionLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#959595" />

        <TextView
            android:id="@+id/TVproductDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/productPriceLine2"
            android:background="@color/White"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Description:"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVproductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:fontFamily="@font/lexend"
            android:gravity="center|fill"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:scrollbars="vertical"
            android:text="See what's happening live in HD video anytime - day or night. 1080P HD indoor, plug-in security camera with motion detection and two-way audio that allows you to monitor the inside of your home day and night. Get alerts on your smartphone when motion is detected, or set motion detection zones so you can see what matters most See, hear, and talk to people and pets in your home on your smartphone with Live View and two-way audio Blink Mini (live view is not Set up in minutes - just plug in your camera, connect it to Wi-Fi, and add it to the Blink app. Blink Mini includes a free trial of a Blink cloud storage subscription until December 31, 2020. For added ease of use, pair Blink Mini with a supported Alexa-enabled device for live viewing, viewing recorded videos, and arming and disarming armed using only your voice."
            android:textColor="#272727"
            android:textSize="16sp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="3dp"
            android:background="#959595" />
    </LinearLayout>

</ScrollView>

